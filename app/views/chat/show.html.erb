        let sendMsgUserId = msgContentTmp.substring(index_1 + 1, msgContentTmp.length);
        let msgContent = msgContentTmp.substring(0, index_1);
        var sendTime = timestamp2FormatDate(message.time,"yyyy/MM/dd hh:mm");
